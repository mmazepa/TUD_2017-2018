<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Scans within the base package of the application for @Components to
		configure as beans -->
	<context:component-scan base-package="service" />

	<bean id="animal01" class="domain.FamilyMember">
		<property name="name" value="Henryk" />
    <property name="gender" value="Male" />
		<property name="yob" value="1894" />
    <property name="child">
      <ref bean="animal02"/>
    </property>
	</bean>

  <bean id="animal02" class="domain.FamilyMember">
    <property name="name" value="Franciszek" />
    <property name="gender" value="Male" />
    <property name="yob" value="1924" />
    <property name="parent">
      <ref bean="animal01"/>
    </property>
    <property name="child">
      <ref bean="animal03"/>
    </property>
  </bean>

  <bean id="animal03" class="domain.FamilyMember">
    <property name="name" value="MichaÅ‚" />
    <property name="gender" value="Male" />
    <property name="yob" value="1954" />
    <property name="parent">
      <ref bean="animal02"/>
    </property>
    <property name="child">
      <ref bean="animal04"/>
    </property>
  </bean>

  <bean id="animal04" class="domain.FamilyMember">
    <property name="name" value="Karolina" />
    <property name="gender" value="Female" />
    <property name="yob" value="1984" />
    <property name="parent">
      <ref bean="animal03"/>
    </property>
    <property name="child">
      <ref bean="animal05"/>
    </property>
  </bean>

  <bean id="animal05" class="domain.FamilyMember">
    <property name="name" value="Zofia" />
    <property name="gender" value="Female" />
    <property name="yob" value="2014" />
    <property name="parent">
      <ref bean="animal04"/>
    </property>
  </bean>

</beans>
